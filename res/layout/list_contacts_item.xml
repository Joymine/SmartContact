<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <RelativeLayout 
        android:id="@+id/relative_layout1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        
        <ImageButton
            android:id="@+id/contact_image1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" 
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:src="@drawable/xiong"/>
        <TextView 
            android:id="@+id/text_name1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/contact_image1"
            android:textSize="20sp"
            android:gravity="center"
            />
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/relative_layout2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        
        <ImageButton
            android:id="@+id/contact_image2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" 
            android:padding="5dp"
            android:src="@drawable/xiong"/>
        <TextView 
            android:id="@+id/text_name2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/contact_image2"
            android:gravity="center"
            android:textSize="20sp"
            />
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/relative_layout3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        
        <ImageButton
            android:id="@+id/contact_image3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" 
            android:padding="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/xiong"/>
        <TextView 
            android:id="@+id/text_name3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/contact_image3"
            android:gravity="center"
            android:textSize="20sp"
            />
        
    </RelativeLayout>

</LinearLayout>
